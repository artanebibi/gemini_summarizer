{
  "manifest_version": 3,
  "name": "Page Content Shortener",
  "version": "1.0",
  "description": "Displays first 500 characters of the current page",
  "action": {
    "default_icon": "icons/icon48.png"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}